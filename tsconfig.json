{
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "__tests__/unit/config/**/*.ts"
  ]
}